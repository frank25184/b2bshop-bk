    <script>
        var navLinks = document.querySelectorAll('.sidebar nav ul li a');
        var sections = document.querySelectorAll('.section');
        for (var i = 0; i < navLinks.length; i++) {
            navLinks[i].addEventListener('click', function(e) {
                e.preventDefault();
                var sectionId = this.dataset.section;
                // Hide all sections
                for (var j = 0; j < sections.length; j++) {
                    sections[j].classList.add('hidden');
                }
                // Show the selected section
                document.getElementById(sectionId + '-section').classList.remove('hidden');
                // Update active link
                for (var k = 0; k < navLinks.length; k++) {
                    navLinks[k].classList.remove('active');
                }
                this.classList.add('active');
                // Close sidebar on mobile after clicking a link
                if (window.innerWidth < 768) {
                    document.getElementById('menu-toggle').checked = false;
                }
            });
        }
        // Slider Value Update
        var slider = document.getElementById('question-slider');
        var sliderValue = document.getElementById('slider-value');
        slider.oninput = function() {
            sliderValue.textContent = this.value + ' (MAX 10 FOR FREE USERS)';
        };
    </script>
