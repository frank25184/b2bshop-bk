<section class="sb-banner sb-banner-xs sb-banner-color">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <!-- main title -->
              <div class="sb-main-title-frame">
                <div class="sb-main-title">
                  <h1 class="sb-h2">Checkout</h1>
                  <ul class="sb-breadcrumbs">
                    <li><a href="/">Home</a></li>
                    <li><a href="/products">Shop</a></li>
                    <li><a href="/order/checkout">Checkout</a></li>
                  </ul>
                </div>
              </div>
              <!-- main title end -->
            </div>
          </div>
        </div>
      </section>
      <!-- banner end -->

      <!-- checkout -->
      <section class="sb-p-90-90">
        <div class="container" data-sticky-container="">
          <div class="row">
            <div class="col-lg-8">
              <form class="sb-checkout-form"  action="/order/billing" method="POST">
                <div class="sb-mb-30">
                  <h3>Billing details</h3>
                </div>
                <div class="row">
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="firstName">
                      <span class="sb-bar"></span>
                      <label>First name</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="lastName">
                      <span class="sb-bar"></span>
                      <label>Last name</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="company">
                      <span class="sb-bar"></span>
                      <label>Company name</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="country">
                      <span class="sb-bar"></span>
                      <label>Country</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="city">
                      <span class="sb-bar"></span>
                      <label>City</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="state">
                      <span class="sb-bar"></span>
                      <label>State / Province</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="street">
                      <span class="sb-bar"></span>
                      <label>Street</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="text" required="" name="postcode">
                      <span class="sb-bar"></span>
                      <label>Postcode</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="tel" required="" name="phone">
                      <span class="sb-bar"></span>
                      <label>Phone</label>
                    </div>
                  </div>
                  <div class="col-lg-6">
                    <div class="sb-group-input">
                      <input type="email" required="" name="email">
                      <span class="sb-bar"></span>
                      <label>Email</label>
                    </div>
                  </div>
                </div>
                <div class="sb-mb-30">
                  <h3>Additional information</h3>
                </div>
                <div class="sb-group-input">
                  <textarea name="orderNotes" required=""></textarea>
                  <span class="sb-bar"></span>
                  <label>Order notes</label>
                </div>
                <div class="sb-mb-30">
                  <h3 class="sb-mb-30">Payment method</h3>
                  <ul>
                    <li class="sb-radio">
                      <input type="radio" id="option-1" name="directBankTransfer" checked="">
                      <label for="option-1">Direct bank transfer</label>
                      <div class="sb-check"></div>
                    </li>
                    <li class="sb-radio">
                      <input type="radio" id="option-2" name="creditCard">
                      <label for="option-2">Credit Card</label>
                      <div class="sb-check"></div>
                    </li>
                    <li class="sb-radio">
                      <input type="radio" id="option-3" name="paypal">
                      <label for="option-3">Paypal</label>
                      <div class="sb-check"></div>
                    </li>
                  </ul>
                </div>
                <!-- button -->
                <button type="submit" class="sb-btn sb-m-0">
                  <span class="sb-icon">
                    <img src="static/picture/arrow.svg" alt="icon">
                  </span>
                  <span>Place order</span>
                </button>
                <!-- button end -->
              </form>
            </div>
            <div class="col-lg-4">
              <div class="sb-pad-type-2 sb-sticky" data-margin-top="120">
                <div class="sb-co-cart-frame">
                  <div class="sb-cart-table">
                    <div class="sb-cart-table-header">
                      <div class="row">
                        <div class="col-lg-9">Product</div>
                        <div class="col-lg-3 text-right">Total</div>
                      </div>
                    </div>
                    {{#if result.items.length}}
                    {{#each result.items}}
                    <div class="sb-cart-item">
                      <div class="row align-items-center">
                        <div class="col-lg-9">
                          <a class="sb-product" href="/product/{{this.name}}">
                            <div class="sb-cover-frame">
                              <img src="{{this.image}}" alt="{{this.name}}">
                            </div>
                            <div class="sb-prod-description">
                              <h4 class="sb-mb-10">{{this.name}}</h4>
                              <p class="sb-text sb-text-sm">x{{this.quantity}}</p>
                            </div>
                          </a>
                        </div>
                        <div class="col-lg-3 text-md-right">
                          <div class="sb-price-2"><span>Total: </span>${{this.price}}</div>
                        </div>
                      </div>
                    </div>
                    {{/each}}
                    {{/if}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <!-- checkout end -->


