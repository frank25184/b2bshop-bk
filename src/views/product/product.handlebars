      <script>
(function () {
  var mainImg  = document.getElementById('pg-main-img');
  var thumbs   = document.getElementsByClassName('pg-thumb');
  var prevBtn  = document.getElementsByClassName('pg-prev')[0];
  var nextBtn  = document.getElementsByClassName('pg-next')[0];
  var total    = thumbs.length;
  var current  = 0;

  function setActive(index) {
    /* 循环范围 */
    if (index < 0)       { index = total - 1; }
    if (index >= total)  { index = 0; }
    current = index;

    /* 更新主图 */
    var big = thumbs[index].getAttribute('data-large');
    mainImg.src = big;

    /* 更新 active 样式 */
    for (var i = 0; i < total; i++) {
      thumbs[i].className = thumbs[i].className.replace(/\bpg-active\b/, '');
    }
    thumbs[index].className += ' pg-active';
  }

  /* 缩略图点击 */
  for (var i = 0; i < total; i++) {
    (function (idx) {
      thumbs[idx].onclick = function () { setActive(idx); };
    })(i);
  }

  /* 上下按钮 */
  prevBtn.onclick = function () { setActive(current - 1); };
  nextBtn.onclick = function () { setActive(current + 1); };

  /* 自动轮播（可选）*/
  // setInterval(function(){ setActive(current + 1); }, 5000);

  /* 初始 */
  setActive(0);
})();
</script>

