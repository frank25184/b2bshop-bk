       <style>
/* 主分类样式 */
.sb-main-categories {
  display: flex;
  justify-content: center;
  gap: 20px;
  margin-bottom: 25px;
}

.sb-main-categories .sb-filter-link {
  font-size: 18px;
  font-weight: 600;
  color: #666;
  padding: 0 14px;
  border-radius: 25px;
  transition: all 0.3s ease;
  background: transparent;
  border: 2px solid #eee;
}

.sb-main-categories .sb-filter-link:hover,
.sb-main-categories .sb-filter-link.sb-active {
  background: #9CCC65;
  color: #fff;
  border-color: #9CCC65;
}

/* 子分类样式 */
.sb-sub-categories {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.sb-sub-categories .sb-filter-link {
  font-size: 14px;
  color: #888;
  padding: 0 15px;
  border-radius: 15px;
  transition: all 0.3s ease;
  background: #f5f5f5;
}

.sb-sub-categories .sb-filter-link:hover,
.sb-sub-categories .sb-filter-link.sb-active {
  background: #666;
  color: #fff;
}

/* 响应式调整 */
@media (max-width: 768px) {
  .sb-main-categories,
  .sb-sub-categories {
    flex-wrap: wrap;
  }
  
  .sb-main-categories .sb-filter-link {
    font-size: 16px;
    padding: 8px 15px;
  }
  
  .sb-sub-categories .sb-filter-link {
    font-size: 13px;
    padding: 5px 12px;
  }
}
       </style>
