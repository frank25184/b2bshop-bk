              </div>
              <div class="sb-sub-categories" style="display: none;">
                <!-- Subcategories will be dynamically populated -->
              </div>
            </div>
            <!-- filter end -->
          </div>
        </div>
        
        <!-- 内容区域 -->
        <div class="col-12" style="margin-top:0">
          <div class="sb-filter-content">
            <div class="sb-masonry-grid">
              <div class="sb-grid-sizer"></div>
                {{#each products}}
                <div class="sb-grid-item sb-item-33 {{this.subcategories.[0].name_changed}}">
                  {{> products/_product}}
                </div>
                {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>


  </div>
</section>
<!-- menu end -->

