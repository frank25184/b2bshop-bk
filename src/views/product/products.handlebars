    <div></div>
  </div>
  <div class="container">
    <div class="sb-filter-container container">
      <div class="row g-4">
        <!-- 筛选侧边栏 -->
        <div class="col-12">
          <div class="sb-filter-sidebar">
            <!-- filter -->
            <div class="sb-filter mb-30" >
              <div class="sb-main-categories mb-3">
                {{!-- <a href="#" data-filter="*" class="sb-filter-link sb-active">All Categories</a> --}}
                <a href="#" data-filter=".frequency-electrotherapy-devices" class="sb-filter-link">Frequency Electrotherapy Devices</a>
                {{!-- <a href="#" data-filter=".low-frequency-resonators" class="sb-filter-link">Low Frequency Resonators</a> --}}
                <a href="#" data-filter=".bio-energy-terahertz-devices" class="sb-filter-link">Bio Energy Terahertz Devices</a>
