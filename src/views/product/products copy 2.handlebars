      {{#extend "css"}}
<style>
/* 主分类样式 */
.sb-main-categories {
  display: flex;
  flex-direction: column;
  gap: 10px;
  margin-bottom: 25px;
}

.sb-main-categories .sb-filter-link {
  font-size: 18px;
  font-weight: 600;
  color: #666;
  padding: 15px 14px 15px;
  transition: all 0.3s ease;
  background: transparent;
  border: none;
  display: block;
  /**  border-radius: 25px;
    border: 2px solid #eee;
  **/
}

.sb-main-categories .sb-filter-link:hover,
.sb-main-categories .sb-filter-link.sb-active {
  background: #9CCC65;
  color: #fff;
  border-color: #9CCC65;
}

/* 子分类样式 */
.sb-sub-categories {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-top: 20px;
  padding-top: 20px;
  border-top: 1px solid rgba(0, 0, 0, 0.08);
}

.sb-sub-categories .sb-filter-link {
  font-size: 14px;
  color: #888;
  padding: 6px 15px;
  border-radius: 15px;
  transition: all 0.3s ease;
  background: #f5f5f5;
  display: block;
  text-align: center;
}

.sb-sub-categories .sb-filter-link:hover,
.sb-sub-categories .sb-filter-link.sb-active {
  background: #666;
  color: #fff;
}

/* 网格布局 */
.sb-masonry-grid {
  width: 100%;
}

/* 响应式布局容器 */
.sb-filter-container {
  display: -webkit-box; /* 旧版 Safari, iOS */
  display: -ms-flexbox; /* IE 10 */
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
      -ms-flex-direction: row;
          flex-direction: row;
  -ms-flex-wrap: wrap;
      flex-wrap: wrap;
  margin-left: -15px;
  margin-right: -15px;
}

.sb-filter-sidebar {
  -webkit-box-flex: 0;
      -ms-flex: 0 0 25%;
          flex: 0 0 25%;
  max-width: 25%;
  padding-left: 15px;
  padding-right: 15px;
}

.sb-filter-content {
  -webkit-box-flex: 0;
      -ms-flex: 0 0 75%;
          flex: 0 0 75%;
  max-width: 75%;
  padding-left: 15px;
  padding-right: 15px;
}

/* 响应式调整 */
@media (max-width: 992px) {
  .sb-filter-sidebar {
    -webkit-box-flex: 0;
        -ms-flex: 0 0 30%;
            flex: 0 0 30%;
    max-width: 30%;
  }
  
  .sb-filter-content {
    -webkit-box-flex: 0;
        -ms-flex: 0 0 70%;
            flex: 0 0 70%;
    max-width: 70%;
  }
}

@media (max-width: 768px) {
  .sb-filter-sidebar,
  .sb-filter-content {
    -webkit-box-flex: 0;
        -ms-flex: 0 0 100%;
            flex: 0 0 100%;
    max-width: 100%;
  }
  
  .sb-main-categories {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .sb-sub-categories {
    flex-direction: row;
    flex-wrap: wrap;
  }
  
  .sb-main-categories .sb-filter-link {
    font-size: 16px;
    padding: 8px 15px;
  }
  
  .sb-sub-categories .sb-filter-link {
    font-size: 13px;
    padding: 5px 12px;
  }
}

/* 旧浏览器回退样式 */
.no-flexbox .sb-filter-container {
  overflow: hidden;
}

.no-flexbox .sb-filter-sidebar {
  float: left;
  width: 25%;
}

.no-flexbox .sb-filter-content {
  float: left;
  width: 75%;
}

@media (max-width: 768px) {
  .no-flexbox .sb-filter-sidebar,
  .no-flexbox .sb-filter-content {
    float: none;
    width: 100%;
  }
}
</style>
      {{/extend}}
