    <script>

function updateMiniCart() {
  const cart = JSON.parse(localStorage.getItem('cart')) || [];
  const miniCartContainer = document.getElementById('miniCartItems');
  const cartTotal = document.getElementById('cartTotal');
  
  // Create form wrapper
  miniCartContainer.innerHTML = `
    <form id="checkoutForm" action="/order/postCheckout" method="POST">
      <input type="hidden" name="totalAmount" value="0">
    </form>
  `;
  
  const form = miniCartContainer.querySelector('#checkoutForm');
  let total = 0;
  
  cart.forEach((item, index) => {
    const itemTotal = parseFloat(item.price) * item.quantity;
    total += itemTotal;
    
    form.innerHTML += `
      <div class="sb-cart-item-wrapper">
        <input type="hidden" name="items[${index}][name]" value="${item.name}">
        <input type="hidden" name="items[${index}][price]" value="${item.price}">
        <input type="hidden" name="items[${index}][quantity]" value="${item.quantity}">
        <input type="hidden" name="items[${index}][image]" value="${item.image}">
        <a href="/product/${item.name}" class="sb-menu-item sb-menu-item-sm sb-mb-15">
          <div class="sb-cover-frame">
            <img src="${item.image}" alt="${item.name}">
          </div>
          <div class="sb-card-tp">
            <h4 class="sb-card-title">${item.name}</h4>
            <div class="sb-price">
              <sub>$</sub>${item.price} <span style="margin: 0 5px">x</span> ${item.quantity}
            </div>
          </div>
        </a>
        <div class="sb-quantity-controls">
          <span class="sb-quantity-btn" onclick="event.preventDefault(); event.stopPropagation(); updateCartQuantity(${index}, 'increase')">+</span>
          <span class="sb-quantity-btn" onclick="event.preventDefault(); event.stopPropagation(); updateCartQuantity(${index}, 'decrease')">-</span>
        </div>
      </div>
    `;
  });
  
  // Update total amount hidden input
  form.querySelector('input[name="totalAmount"]').value = total.toFixed(2);
  cartTotal.textContent = total.toFixed(2);
}

function updateCartQuantity(index, action) {
  let cart = JSON.parse(localStorage.getItem('cart')) || [];
  if (action === 'increase' && cart[index].quantity < 10) {
    cart[index].quantity += 1;
  } else if (action === 'decrease' && cart[index].quantity > 0) {
    cart[index].quantity -= 1;
    // Remove item from cart if quantity reaches 0
    if (cart[index].quantity === 0) {
      // Remove the corresponding HTML element
      const cartItemElements = document.querySelectorAll('.sb-cart-item-wrapper');
      if (cartItemElements[index]) {
        cartItemElements[index].remove(); // Remove the element from the DOM
      }
      // Remove the item from the cart array
      cart.splice(index, 1);
    }
  }
  localStorage.setItem('cart', JSON.stringify(cart));
  console.log( " JSON.stringify(cart): "+JSON.stringify(cart));
  updateMiniCart();
}
