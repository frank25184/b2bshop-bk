      {{#extend "js"}}
      <script>
        (function(){
          // Contact Form Handler
          function initializeContactForm() {
            var form = document.getElementById('form');
            if (form) {
              form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Check if FormData is supported, if not, create a simple object
                var formData;
                if (typeof FormData === 'function') {
                  formData = new FormData(form);
                } else {
                  formData = {};
                  Array.prototype.forEach.call(form.elements, function(element) {
                    if (element.name) {
                      formData[element.name] = element.value;
                    }
                  });
                }

                // Use traditional promise pattern
                fetch('/user/postLogin', {
                  method: 'POST',
                  body: formData
                })
                .then(function(response) {
                  if (response.ok) {
                    var successElement = document.querySelector('.sb-success-result');
                    if (successElement) {
                      successElement.classList.add('sb-active');
                    }
                  }
                })
                .catch(function(error) {
                  console.error('Form submission error:', error);
                });
              });
            }
          }
        })()
      </script>
