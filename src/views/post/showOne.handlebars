      <!-- publication end -->

      <!-- popular --> 
      <section class="sb-popular sb-p-60-30">
        <div class="sb-bg-3" style="background-color: transparent;">
        </div>
        <div class="container">
          <div class="sb-group-title sb-mb-30">
            <div class="sb-left sb-mb-30">
              <h2 class="sb-mb-30">Most <span>popular</span> Articles</h2>
              {{!-- <p class="sb-text"></p> --}}
            </div>
          </div>
          <div class="swiper-container sb-blog-slider-3i">
            <div class="swiper-wrapper"> 
              
              {{#each alternativesFour}}
              <div class="swiper-slide"> 
                <a href="/article/{{pathName}}" class="sb-blog-card sb-mb-30">
                  <div class="sb-cover-frame sb-mb-30">
                    <img src="/upload/articles/{{topIMG}}" alt="cover">
                    <div class="sb-badge">Popular</div>
                  </div>
                  <div class="sb-blog-card-descr">
                    <h3 class="sb-mb-10">{{title}}</h3>
                    <div class="sb-suptitle sb-mb-15"><span>{{updated_at}}</span> <span>{{postUser.username}}</span></div>
                    <p class="sb-text">{{intro}}</p>
                  </div>
                </a>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </section>
      <!-- popular end -->